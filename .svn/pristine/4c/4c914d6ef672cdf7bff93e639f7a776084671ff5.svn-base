<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="99.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/app_item_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/appicon"
        android:layout_width="83.0dip"
        android:layout_height="83.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="6.0dip"
        android:src="@drawable/app_item_icon_loading" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="WIFI万能钥匙"
        android:textColor="#ff222222"
        android:textSize="14.0dip" />

    <TextView
        android:id="@+id/appSlogan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="WIFI万能钥匙"
        android:textColor="#ff222222"
        android:textSize="14.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/appsize"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left|center"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="left"
            android:maxWidth="60.0dip"
            android:singleLine="true"
            android:text="34.79M"
            android:textColor="#ff888888"
            android:textSize="12.0dip" />

        <ImageView
            android:id="@+id/downicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:cropToPadding="false"
            android:paddingLeft="8.0dip"
            android:paddingTop="3.0dip"
            android:src="@drawable/app_item_v_down_start" />

        <TextView
            android:id="@+id/downbtn"
            android:layout_width="80.0dip"
            android:layout_height="45.0dip"
            android:layout_gravity="right|center"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/app_wall_btn_bg"
            android:text="@string/app_item_btn_down"
            android:textColor="#fffeffff"
            android:textSize="16.0dip"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/mine_icon_arrow" />
            </RelativeLayout>




            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_cache_olor_hint" />

            <RelativeLayout
                android:id="@+id/act_wifi_share_rl"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/sliding_menu_height"
                android:background="@drawable/pref_secury_item_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/sliding_menu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sliding_menu_height"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="left|center"
                    android:text="@string/pref_act_setting_title_shareauto"
                    android:textColor="#ff333333" />

                <LinearLayout
                    android:layout_width="60.0dip"
                    android:layout_height="@dimen/sliding_menu_height"
                    android:layout_alignParentRight="true"
                    android:gravity="center" >

                    <CheckBox
                        android:id="@+id/act_wifi_share_wiperswitch"
                        android:layout_width="40.0dip"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_box_bg"
                        android:checked="true" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/act_wifi_share_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_cache_olor_hint" />


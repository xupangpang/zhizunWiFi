                    android:layout_height="@dimen/sliding_menu_height"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="left|center"
                    android:text="好评支持"
                    android:textColor="#ff333333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/mine_icon_arrow" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_cache_olor_hint" />

            <RelativeLayout
                android:id="@+id/version_update"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/sliding_menu_height"
                android:background="@drawable/list_selector"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sliding_menu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sliding_menu_height"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="left|center"
                    android:text="版本更新"
                    android:textColor="#ff333333" />

                <TextView
                    android:id="@+id/arrow_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:text=""
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_cache_olor_hint" />

            <RelativeLayout
                android:id="@+id/about_us"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/sliding_menu_height"

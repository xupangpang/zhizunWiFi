<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff5f5f5"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include
        android:id="@+id/viewHeader"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        layout="@layout/view_header1" />

    <com.zhizun.zhizunwifi.utils.CircleImageView
        android:id="@+id/my_image_ico"
        android:layout_below="@id/viewHeader"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:src="@drawable/app_ico"
        app:border_width="2dp"
        app:border_color="@android:color/transparent"
        />

    <TextView
        android:id="@+id/about_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/my_image_ico"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/about_appvasion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_appname"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#999999"
        android:textSize="15.0dp"
        android:text="XXXX"
        />


    <TextView
        android:id="@+id/act_about_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/act_about_tv_slogan"
        android:textColor="#ff1295df"
        android:layout_centerHorizontal="true"
        android:textSize="13.0sp" />

    <TextView
        android:id="@+id/about_groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#999999"
        android:textSize="12.0dp"
        android:text="Copyright © 2008-2016 创新梦想 All Right Reserved"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:id="@+id/about_functionin_app"
        android:layout_width="fill_parent"
        android:background="@drawable/list_selector"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/about_appvasion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="应用简介"
            android:textColor="#333333"
            android:textSize="16dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/about_functionin_gn"
        android:layout_width="fill_parent"
        android:background="@drawable/list_selector"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/about_functionin_app"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="功能介绍"
            android:textColor="#333333"
            android:textSize="16dp" />

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="62.0dip"
        android:gravity="center_vertical"
        android:minHeight="62.0dip"
        android:paddingLeft="10.0dip" >

        <!-- <com.qihoo.freewifi.view.CircleImageView -->
        <ImageView
            android:id="@+id/ap_icon"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_marginLeft="10.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_map_default"
            />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ap_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="ssid"
                    android:textColor="#ff333333"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@+id/ap_iname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.0dip"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffaaabbb"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/ap_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="saved password"
                android:textColor="#ffaaabbb"
                android:textSize="12.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ap_more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/mine_icon_arrow"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
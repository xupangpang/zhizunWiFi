<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90.0dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/appicon"
        android:layout_width="68.0dip"
        android:layout_height="68.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="6.0dip"
        android:src="@drawable/app_item_icon_loading" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="WIFI万能钥匙"
        android:textColor="#ff333333"
        android:textSize="13.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/downicon_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:cropToPadding="false"
            android:paddingLeft="8.0dip"
            android:paddingTop="3.0dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/appsize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="34.79M"
            android:textColor="#ff666666"
            android:textSize="12.0dip"
            android:visibility="gone" />

        <!-- <com.snda.wifilocating.ui.support.AppStarLevel
            android:id="@+id/appStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appsize"
            android:layout_marginTop="2.0dip"
            android:visibility="gone"
            wk:maxStar="5"
            wk:starNum="2.3" /> -->

        <TextView
            android:id="@+id/appDlTimes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="1000万+次下载"
            android:textColor="#ff666666"
            android:textSize="9.0dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/downbtn"
        android:layout_width="55.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8.0dip"
        android:background="@drawable/app_wall_btn_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_item_btn_down"
        android:textColor="#fffeffff"
        android:textSize="@dimen/app_item_down_text_size_v" />

</LinearLayout>